{
    "coc.preferences.extensionUpdateCheck": "daily",
    "suggest.timeout": 5000,
    "suggest.enablePreselect": false,
    "suggest.noselect": true,
    "clangd.enabled": true,
    "clangd.compilationDatabasePath": ".vscode",
    "python.pythonPath": "python3",
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.work",
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "go"
            ],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx8G -Xms100m -Xlog:disable",
    "java.import.maven.enabled": true,
    "java.completion.enabled": false,
    "java.format.onType.enabled": true,
    "java.completion.guessMethodArguments": true,
    "java.codeGeneration.useBlocks": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.signatureHelp.enabled": true,
    "java.maven.downloadSources": true
}
